<body>
	<h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <form class="edit_book">
      <div class="error_explanation">
	    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
	    <ul>
		<% @book.errors.full_messages.each do |message| %>
		  <li><%= message %></li>
		<% end %>
	    </ul>
	  </div>
	<% end %>
	<% if @book.errors.any? %>
		<%=form_for(@book) do |f| %>
		<div class="field">
		    <label for="book">Title</label>
		    <%= f.text_field :title, class: "book_field" %>
		</div>
	    <div class="field">
	        <label class="book">Body</label>
	        <%= f.text_area :body,class: "book_field" %>
	    </div>
	    <div class="action">
	      <%= f.submit 'Update Book' %>
	    </div>
        <% end %>
    <% else %>
	    <%=form_for(@book) do |f| %>
			<div class="field">
			    <label for="book_a">Title</label>
			    <%= f.text_field :title, class: "book_field_a" %>
			</div>
		    <div class="field">
		        <label class="book_a">Body</label>
		        <%= f.text_area :body,class: "book_field_a" %>
		    </div>
		    <div class="actions">
		      <%= f.submit 'Update Book' %>
		    </div>
	        <% end %>
        <% end %>
    </form>
	<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</body>
</html>