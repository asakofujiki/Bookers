<body>
	<p class="notice"><%= flash[:notice] %></p>
	<h1>Books</h1>
	<table>
		<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></tf>
		</thead>
		<% @books.each do |book| %>
		<tbody>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
		<% end %>
	    </tbody>
	</table>

	<h2>New book</h2>
	<% if @book.errors.any? %>
	<form class="new_book">
	  <div class="error_explanation">
	    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
	    <ul>
		<% @book.errors.full_messages.each do |message| %>
		  <li><%= message %></li>
		<% end %>
	    </ul>
	</div>
	<% end %>
	<% if @book.errors.any? %>
	    <%= form_for(@book) do |f| %>
			<div class="field">
			  <label class="book">Title</label>
			  <%= f.text_field :title,class: "book_field" %>
			</div>
			<div class="field">
			  <label class="book">Body</label>
			  <%= f.text_area :body,class: "book_field" %>
		    </div>
			<div class="actions">
			  <%= f.submit 'Create Book' %>
			</div>
			<% end %>
	<% else %>
			<%= form_for(@book) do |f| %>
			<div class="field">
			  <label class="book_a">Title</label>
			  <%= f.text_field :title,class: "book_field_a" %>
			</div>
			<div class="field">
			  <label class="book_a">Body</label>
			  <%= f.text_area :body,class: "book_field_a" %>
		    </div>
			<div class="actions">
			  <%= f.submit 'Create Book' %>
			</div>
			<% end %>
	<% end %>
	</form>
</body>
</html>
